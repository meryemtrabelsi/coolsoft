{% extends 'base.html.twig' %}

{% block title %}Seance index{% endblock %}

{% block body %}
    <h1>Seance index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Duration</th>
                <th>Level</th>
                <th>Adresse</th>
                <th>Coach_name</th>
                <th>People_nbre</th>
                <th>Is_available</th>
                <th>Description</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for seance in seances %}
            <tr>
                <td>{{ seance.id }}</td>
                <td>{{ seance.date ? seance.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ seance.duration }}</td>
                <td>{{ seance.level }}</td>
                <td>{{ seance.adresse }}</td>
                <td>{{ seance.coachName }}</td>
                <td>{{ seance.peopleNbre }}</td>
                <td>{{ seance.isAvailable ? 'Yes' : 'No' }}</td>
                <td>{{ seance.description }}</td>
                <td>{{ seance.price }}</td>
                <td>
                    <a href="{{ path('app_seance_show', {'id': seance.id}) }}">show</a>
                    <a href="{{ path('app_seance_edit', {'id': seance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_seance_new') }}">Create new</a>
{% endblock %}
