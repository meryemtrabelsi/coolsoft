{% extends 'base.html.twig' %}

{% block title %}Seance{% endblock %}

{% block body %}
    <h1>Seance</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ seance.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ seance.date ? seance.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ seance.duration }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ seance.level }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ seance.adresse }}</td>
            </tr>
            <tr>
                <th>Coach_name</th>
                <td>{{ seance.coachName }}</td>
            </tr>
            <tr>
                <th>People_nbre</th>
                <td>{{ seance.peopleNbre }}</td>
            </tr>
            <tr>
                <th>Is_available</th>
                <td>{{ seance.isAvailable ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ seance.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ seance.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_seance_index') }}">back to list</a>

    <a href="{{ path('app_seance_edit', {'id': seance.id}) }}">edit</a>

    {{ include('seance/_delete_form.html.twig') }}
{% endblock %}
