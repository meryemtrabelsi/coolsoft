                    <h4 class="header-title m-t-0 m-b-30">Add Produit</h4>
                    {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}

                    <div class="form-group">
                        <label for="nom">Nom</label>

                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.nom, {'attr': {'class': 'text-danger'}}) }}


                    </div>
                    <div class="form-group">
                        <label for="nom">Prix</label>

                        <div class="form-group">
                            {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.prix, {'attr': {'class': 'text-danger'}}) }}



                        </div>
                        <div class="form-group">

                            <label for="nom">Description</label>

                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.description, {'attr': {'class': 'text-danger'}}) }}


                        </div>
                        <div class="form-group">

                            <label for="nom">QteStock</label>


                            {{ form_widget(form.qtestock, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.qtestock, {'attr': {'class': 'text-danger'}}) }}

                        </div>
                        <div class="form-group">

                            <label for="nom">Categorie</label>


                            {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.categorie, {'attr': {'class': 'text-danger'}}) }}

                        </div>





                        <div class="form-group text-right m-b-0">
                            <button class="btn">{{ button_label|default('Save') }}</button>
                            <button type="reset" class="btn btn-secondary waves-effect waves-light m-l-5">Reset
                            </button>

                        </div>

                        {{form_end(form)}}
