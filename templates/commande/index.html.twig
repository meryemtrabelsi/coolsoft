{% extends 'base1.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commandes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Statue</th>
                <th>Codepromo</th>
                <th>Detail</th>
                <th>Modifier</th>
                <th>Suprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.statue }}</td>
                <td>{{ commande.codepromo }}</td>
                <td><a href="{{ path('app_commande_show', {'id': commande.id}) }}">show</a></td>
                <td><a href="{{ path('app_commande_edit', {'id': commande.id}) }}">edit</a></td>
                <td>{{ include('commande/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
