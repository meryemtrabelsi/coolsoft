{% extends 'checkout.html.twig' %}
{% block content %}
<h3 id="order_review_heading">Your order</h3>
<!-- Review Order -->
<div id="order_review" class="woocommerce-checkout-review-order">
    <table class="shop_table woocommerce-checkout-review-order-table">
        <thead>
        <tr>
            <th class="product-name">Product</th>
            <th class="product-total">Total</th>
        </tr>
        </thead>
        <tbody>
        {% for lignedecommande in commande.lignedecommandes %}
        <tr class="cart_item">
            <td class="product-name">
                {{ lignedecommande.produit.nom }}
                <strong class="product-quantity">*{{ lignedecommande.quantite}}</strong>
            </td>
            <td class="product-total">
                <span class="amount">{{ lignedecommande.totale }}</span>
            </td>
        </tr>

        <tr class="shipping">
            <th>Shipping</th>
            <td data-title="Statue">
                <p>{{ lignedecommande.statue }}</p>
            </td>
        </tr>
        <tr class="order-total">
            <th>Total</th>
            <td><strong><span class="amount">&pound;235.00</span></strong> </td>
        </tr>
        </tfoot>
    </table>
{% endblock%}